body
	margin 0
	padding 0
	background #FFF
	font-family 'Open Sans', Arial, Helvetica, sans-serif
	font-size 14px
.header
	margin 0 auto
	width 1000px
	height 100px
.header h1
	margin 0
	font-weight normal
	font-size 30px
	padding-top 18px
.header h2
	margin 0
	font-weight normal
	font-size 16px
.logo
	width 85px
	height 85px
	margin 7px 23px 8px 0px
	background url("../img/logo.png") no-repeat
	float left
.lang
	margin 0
	padding 22px 3px 16px 0px
	float right
	list-style: none
.lang li
	display inline-block
	margin-left 10px
.lang li a
	color #7E7E7E
	text-decoration none
.active_lang
	font-weight bold
	color red
.social_networks
	margin 0
	padding 0
	float right
	width 100px
.wrapper_menu
	width 100%
	height 34px
	background #444444
.menu
	width 1000px
	margin 0 auto
	ul
		margin 0
		padding 0
		list-style: none
		float left
		li
			display inline-block
			margin 0
			a
				margin 0
				display block
				height 34px
				text-decoration none
				padding 0 15px
				line-height  34px
				color #D2D2D2
				font-size 16px
				-webkit-transition 0.2s
				-moz-transition 0.2s
				-o-transition 0.2s
				transition 0.2s
				&:hover
					background #e63030

.search
	float right
.search .text_area
	vertical-align top
	padding 0 10px
	line-height  22px
	background #2e2e2e
	color #d2d2d2
	border none
	height 22px
	width 170px
	-webkit-border-radius 2px
	 border-radius 2px
	margin 6px 0
.search .button
	vertical-align top
	padding 0
	margin 9px 2px 9px 6px
	border 0
	background url("../img/seach.png")
	width 16px
	height 16px
.layout
	padding 30px 0
	margin 0 auto
	width 1000px
.blok_header
	height 35px
	border-bottom 1px solid #d9d9d9
	text-align center
.blok_header h3 a
	color #46a7eb
	font-size 18px
	font-weight normal


.sidebar
	width 220px
	float left
.additional_menu
	padding 15px 0
	background #f0f0f0
	ul
		margin 0
		padding 0
		list-style none
		li
			padding 0 15px
			-webkit-transition 0.2s
			-moz-transition 0.2s
			-o-transition 0.2s
			transition 0.2s
			&:hover
				background #444
		a
			text-decoration none
			color #000
			font-size 17px
			font-weight lighter
			line-height 1.8

.activity_content
	margin 28px 0
.date
	float left
	margin-right 15px
.day_of_week
	height 15px
	width 54px
	background #ec5252
	text-align center
	line-height 15px
	color #fff
.number_of_day
	height 38px
	width 54px
	background #ececec
	text-align center
	line-height 38px
.activity-text
	margin-left 69px


.aside
	width 220px
	float right
.banner
	margin-bottom 30px
.comment
	border 3px solid #ebebeb
	position relative
	padding 15px
	margin-bottom 35px
.comment_arrow
	position absolute
	left 24px
	width 29px
	height 22px
	background url("../img/comment_arrow.png")
	z-index 2
	bottom -22px
.expert_photo
	float left
	margin-right 20px
.expert p
	margin 0



.content
	width 480px
	margin 0 260px
.content_slider
	width 480px
	height 255px
	background url("../img/slider.png")
	margin-bottom 20px
.blok_content
	margin 28px 0
.blok_content_img
	float left
	margin-right 25px
.blok_content_text
	margin-left 105px
	line-height 1.45
.blok_content_text h3
	margin 0
.blok_content_text h3 a
	color #46a7eb
	font-size 18px
	font-weight 500
.blok_content_text p
	font-weight 500
	color #000
	margin 0
.blok_content_text span
	color #888888
	font-weight 600
	font-size 10px
.wrapper_footer
	width 100%
	height 70px
	background #444444
.footer
	width 1000px
	margin 0 auto
.footer p
	color #888888
	padding 0
	line-height 70px
	margin 0
.footer ul
	margin 0
	padding 12px 0
	list-style: none
	float right
.footer ul li
	color #888888
	margin 5px 0
.footer ul li a
	color #46a7eb


